{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // On isole ce sous-projet : il ne recompile plus le code racine pour éviter
    // les collisions "Cannot write file ... overwritten by multiple input files".
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "baseUrl": ".",
    // Optionnel: empêcher toute émission même si plus tard on enlève noEmit sur parent.
    "noEmit": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "../src" // évite de tirer les sources racine
  ]
}
